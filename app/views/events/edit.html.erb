  <% if current_user.id == @event.user_id %>
<div class="contents row">
  <div class="container">
<%= form_tag("/events/#{@event.id}", method: :patch) do %>
  <ul>
  <li>
      <textarea cols="30" rows="1" name="event_name" placeholder="イベント名" ><%= @event.event_name %></textarea>
  <li><%=form_for (@event) do |f| %>
    <%= f.datetime_select :event_date, :default => Time.now + 1.month %>
    <% end %>
  </li>
      <textarea cols="30" rows="1" name="event_location" placeholder="イベント開催場所" ><%= @event.event_location %></textarea>
  </li>
  <li>
      <input type="submit" value="SENT">
  </li>
  </ul>
<% end %>
  </div>
</div>
  <% else %>
  <% end %>