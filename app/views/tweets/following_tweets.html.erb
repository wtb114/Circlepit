<% if user_signed_in? %>
<h2>フォロー中のツイート</h2>
<% @users.each do |user| %>
  <% @tweets = Tweet.where(user_id: user.id).limit(1).order("created_at DESC") %>
  <% @tweets.each do |tweet| %>
    <div class="contents row" >
      <div class="name3">投稿者:<%= link_to user.username, user_path(user), method: :get %>&nbsp;&nbsp;<%= link_to user.username + 'のツイート一覧へ', users_tweets_user_path(user), {class: 'btn btn-primary withripple' }%></div>
      <div class="name2">投稿日時:<%= tweet.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
      <div class="name2"><%= link_to '詳細', tweet_path(tweet), method: :get %></div>
      <div class="name3"><%= simple_format(tweet.text) %></div>
    </div>
  <% end %>
<% end %>
  <%= paginate(@users) %>
</div>
<% end %>