<div class="row form user_profile">
  <div class="col-lg-12">
    <div class="image" style="background-image: url(<%= @user.avatar.url(:medium) %>);"></div>
    <h2><%= @user.username %><span></h2>
    <% if current_user.id == @user.id %>
      <div class="profile_edit">
        <%= link_to 'プロフィール編集', edit_user_path(current_user), {class: 'btn btn-primary withripple' }%>
      </div>
    <% end %>
  </div>
</div>

  <h3>お気に入りのアーティスト</h3>
  <%= link_to "アーティスト一覧", artists_path %>
    <% @user.artists.each_with_index do |artist,i| %>
          <tr>
            <div class="name"><%= artist.artist_name %>
              <div class="name3"><%= link_to "削除",favorite_path(@favorites[i][:id]), method: :delete %>
              </div>
            </div>

            <div class="content_post" style="background-image: url(<%= artist.artist_image_url %>);">
            </div>
          </tr>
          <div> オフィシャルページ</div>
          <a href="<%= artist.artist_url %>" target="_blank"><%= artist.artist_url %></a>
      </tr>
    <% end %>